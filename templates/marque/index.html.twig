{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1>Marque index</h1>

    <div class="col col-md-12">
    <a class="btn btn-primary btn-sm btn-primary" href="{{ path('marque_new') }}">Create new <span class="badge badge-pill badge-default">4</span></a>

    <table class="table table-hover table-condenseddddd">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Filename</th>
                <th> File </th>
                <th> UpdatedAt </th>
                <th> DeletedAt </th>
                <th> UpdatedBy </th>
                <th> DeletedBy </th>
                <th> Tag1/Tag2 </th>
                <th> Tag3/Tag4 </th>
                <th> Tag5 </th>
                <th> Quick Find </th>
                <th> actions </th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}

            <tr>
                <td> {{ marque.id }} </td>
                <td> {{ marque.nom }} </td>
                <td> {{ marque.description }} </td>
                <td> {{ marque.filename }} </td>
                <td> <img src="{{ asset(marque.file |trans) }}" alt="" width="100"> </td>
                <td> {{ marque.updatedAt ? marque.updatedAt|date('Y-m-d H:i:s') : '' }} </td>
                <td> {{ marque.deletedAt ? marque.deletedAt|date('Y-m-d H:i:s') : '' }} </td>
                <td> {{ marque.updatedBy }} </td>
                <td> {{ marque.deletedBy }} </td>
                <td> {{ marque.tag1 }} <br>{{ marque.tag2 }} </td>
                <td> {{ marque.tag3 }} <br/> {{ marque.tag4 }} </td>
                <td> {{ marque.tag5 }} </td>
                <td>
                <a class="" href="{{ path('article_gallery', {'q': '', 'marques[]=' : marque.id, 'tag': marque.tag1}) }}">find tag1</a>
                </td>
                 <td>
                    <a class="btn btn-primary btn-sm btn-info" href="{{ path('marque_show', {'id': marque.id}) }}"> show </a>
                    <a class="btn btn-primary btn-sm btn-primary" href="{{ path('marque_edit', {'id': marque.id}) }}"> edit </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm btn-primary" href="{{ path('marque_new') }}">Create new</a>
    </div>

{% endblock %}
